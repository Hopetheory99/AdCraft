# AdCraft Environment Variables
# Copy this file to `.env` and adjust values for your local setup.

# Auth Service database credentials
DB_HOST=postgres
DB_PORT=5432
DB_USERNAME=user
DB_PASSWORD=password
DB_DATABASE=adcraft_auth

# JWT configuration
JWT_SECRET=change_me
JWT_EXPIRATION=15m
REFRESH_TOKEN_EXPIRATION=7d

# PostgreSQL container credentials
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=adcraft_auth

# Port overrides
# PORT_FRONTEND=3000

# Optional overrides
# NODE_ENV=development
# API_URL=http://auth-service:3002
# PORT_AUTH=3002
# NX_CLOUD_ACCESS_TOKEN=your_token_here
