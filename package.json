    "start": "echo \"Error: Please use 'nx run' commands for starting specific services\" && exit 1",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "lint": "eslint ."
  },
  "dependencies": {},
  "devDependencies": {
    "@nrwl/cli": "^15.0.0",
    "@nrwl/eslint-plugin-nx": "^15.0.0",
    "@nrwl/jest": "^15.0.0",
    "@nrwl/js": "^15.0.0",
    "@nrwl/linter": "^15.0.0",
    "@nrwl/nest": "^15.0.0",
    "@nrwl/node": "^15.0.0",
    "@nrwl/nx-cloud": "^15.0.0",
    "@nrwl/react": "^15.0.0",
    "@nrwl/web": "^15.0.0",
    "@nrwl/workspace": "^15.0.0",
    "@types/node": "^18.11.9",
    "@typescript-eslint/eslint-plugin": "^5.44.0",
    "@typescript-eslint/parser": "^5.44.0",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.2",
    "lint-staged": "^13.0.3",
    "nx": "^15.0.0",
    "prettier": "^2.7.1",
    "typescript": "^4.9.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
